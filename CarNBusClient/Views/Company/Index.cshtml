@model CarNBusClient.Models.CompanyViewModel.CompanyViewModel

@{
    ViewData["Title"] = "Company";
}

<h2>Company</h2>

<p>
    <a asp-action="Create">Create new company</a>
</p>
<div class="row">
    <div class="col-lg-8">
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Companies[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Companies[0].Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Companies[0].CreationTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Companies[0].Pending)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Companies)
                {
                    <tr>
                        <td>
                            @Html.HiddenFor(modelItem => item.CompanyId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreationTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pending)
                        </td>
                        <td>
                            @if (String.IsNullOrEmpty(item.Pending) || item.Pending == "Update" || item.Pending == "Create")
                            {
                                <a href="/Company/Edit/@item.CompanyId">Edit</a> @Html.Raw("|");
                                <a href="/Company/Details/@item.CompanyId">Details</a> @Html.Raw("|");
                                <a href="/Company/Delete/@item.CompanyId">Delete</a>
                            }
                            else
                            {
                                @Html.Raw("Edit | Details | Delete");
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-4">
        <p class="alert-info">All companies registered in the database are shown here. You can also create new companies as well as remove companies. To see which vehicle belong to a certain company, go to Company Vehicles.</p>
    </div>
</div>